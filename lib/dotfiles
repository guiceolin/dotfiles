# vim:ft=zsh
autoload -Uz _dotfiles_plugin_enable _dotfiles_remote_install _dotfiles_list

usage() {
  echo "USAGE: myscript COMMAND plugin"
  return 1
}

if [ $# -lt 1 ]; then usage; fi

case "$1" in
  list)
    _dotfiles_list
    return 0
    ;;
  enable)
    shift
    _dotfiles_plugin_enable $@
    return 0
    ;;

  remote)
    shift
    _dotfiles_remote_install $0
    ;;

  *)
    echo "dotfile: Wrong command";
    return 2;
esac
